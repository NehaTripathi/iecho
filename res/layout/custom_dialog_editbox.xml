<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/dialog2_txt1" android:layout_width="fill_parent"
		android:layout_height="25dip" android:textColor="#000000"
		android:textSize="14dip" android:visibility="visible"
		android:layout_margin="3dip" />

	<EditText android:id="@+id/dialog2_edit1" android:singleLine="true"
		android:maxLines="1" android:layout_width="fill_parent"
		android:layout_height="45dip" android:layout_margin="3dip"
		android:visibility="visible" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:weightSum="1.0">
		<Button android:id="@+id/dialog2_btn1" android:layout_width="0dip"
			android:layout_weight=".50" android:background="#7bb044"
			android:layout_height="36dip" android:textColor="#ffffff"
			android:layout_margin="3dip" android:visibility="visible" />
		<Button android:id="@+id/dialog2_btn2" android:layout_width="0dip"
			android:layout_weight=".50" android:background="#7bb044"
			android:layout_height="36dip" android:textColor="#ffffff"
			android:layout_margin="3dip" android:visibility="visible" />
	</LinearLayout>
</LinearLayout>