<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="#dcdbdb" android:layout_height="match_parent"
	android:weightSum="1.0">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:weightSum="1.0" android:background="#0097db"
		android:orientation="horizontal">
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/settings_info"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_info" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".70"
			android:background="#0097db" android:orientation="vertical">
			<ImageView android:layout_width="140dip"
				android:layout_height="35dip" android:src="@drawable/logo"
				android:gravity="center_horizontal" android:layout_centerInParent="true" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/settings_home_btn"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_home" />
		</RelativeLayout>

	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:background="#dcdbdb" android:orientation="horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dip" android:layout_centerInParent="true"
			android:textColor="#008bd0" android:textStyle="bold" android:text="Settings"
			android:textSize="15dip" />
	</RelativeLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".60"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:weightSum="1.0" android:background="#ffffff"
		android:orientation="vertical">
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="34dip" android:layout_centerInParent="true"
				android:text="Edit Profile" android:textStyle="bold"
				android:id="@+id/settings_edit_profile_btn"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:background="#7bb044" android:textColor="#ffffff" />

		</RelativeLayout>
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="34dip" android:layout_centerInParent="true"
				android:text="Change Password" android:textStyle="bold"
				android:id="@+id/settings_change_password_btn"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:background="#7bb044" android:textColor="#ffffff" />

		</RelativeLayout>
		<RelativeLayout android:layout_width="match_parent" android:visibility="gone"
			android:layout_height="0dip" android:layout_weight=".20">
			<Button android:layout_width="match_parent"
				android:layout_height="34dip" android:layout_centerInParent="true"
				android:text="SoS" android:textStyle="bold" android:id="@+id/settings_sos_btn"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:background="#7bb044" android:textColor="#ffffff" />

		</RelativeLayout>
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="34dip" android:layout_centerInParent="true"
				android:text="My Status" android:textStyle="bold"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:id="@+id/settings_switch_mode_btn" android:background="#7bb044"
				android:textColor="#ffffff" />

		</RelativeLayout>
		
				<LinearLayout android:layout_width="fill_parent"
			android:layout_marginTop="4dip" android:layout_height="0dip"
			android:layout_weight=".143" android:weightSum="1.0"
			android:orientation="horizontal">
			<TextView android:layout_width="0dip" android:layout_height="match_parent"
				android:text="GPS Update :" android:layout_weight=".40"
				android:textSize="13dip" android:layout_marginLeft="5dip"
				android:gravity="center_vertical" android:textColor="#000000" />
			<Button android:layout_width="0dip" android:layout_height="35dip"
				android:textStyle="bold" android:textSize="12dip"
				android:id="@+id/edit_profile_choose_frequency_btn"
				android:layout_weight=".35" android:textColor="#ffffff"
				android:background="#7bb044" android:text="Select Frequency" />
			<RelativeLayout android:layout_width="0dip"
				android:layout_height="match_parent" android:layout_weight=".25">
				<TextView android:layout_width="50dip" android:textSize="11dip"
					android:text="15 mins" android:gravity="center_vertical|center_horizontal"
					android:textColor="#000000" android:layout_height="match_parent"
					android:layout_centerInParent="true" android:textStyle="normal"
					android:id="@+id/edit_profile_sos_update_text_view" />
			</RelativeLayout>
		</LinearLayout>
		
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="34dip" android:layout_centerInParent="true"
				android:text="Logout" android:textStyle="bold"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:id="@+id/settings_logout_btn" android:background="#7bb044"
				android:textColor="#ffffff" />

		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
















