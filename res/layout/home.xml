<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="#dcdbdb" android:layout_height="match_parent"
	android:weightSum="1.0">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:weightSum="1.0" android:background="#0097db"
		android:orientation="horizontal">
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/home_info"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_info" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".70"
			android:background="#0097db" android:orientation="vertical">
			<ImageView android:layout_width="140dip"
				android:layout_height="35dip" android:src="@drawable/logo"
				android:layout_centerInParent="true" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/home_home_btn"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_home" />
		</RelativeLayout>

	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="0dip"
		android:layout_weight=".90" android:weightSum="100">

		<TextView android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight="5" />

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight="25">
			<Button android:layout_width="fill_parent" android:background="@drawable/friends_button"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:id="@+id/home_friends_btn" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_centerInParent="true"
				android:layout_height="70dip" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight="25">
			<Button android:layout_width="fill_parent" android:background="@drawable/btn_securejourney"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:id="@+id/home_notification_btn" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_centerInParent="true"
				android:layout_height="70dip" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight="25">
			<Button android:layout_width="fill_parent" android:background="@drawable/btn_sos"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:id="@+id/home_sos_btn" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_centerInParent="true"
				android:layout_height="70dip" />
		</RelativeLayout>


		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight="20"
			android:weightSum="1.0">
			<RelativeLayout android:layout_width="0dip"
				android:layout_height="match_parent" android:layout_weight=".333">
				<Button android:layout_width="50dip" android:layout_height="50dip"
					android:background="@drawable/icon_settings" android:id="@+id/home_bottom_settings_btn"
					android:layout_centerInParent="true" />
			</RelativeLayout>
			<RelativeLayout android:layout_width="0dip"
				android:layout_height="match_parent" android:layout_weight=".333">
				<Button android:layout_width="50dip" android:layout_height="50dip"
					android:background="@drawable/icon_contacts" android:id="@+id/home_bottom_contacts_btn"
					android:layout_centerInParent="true" />
			</RelativeLayout>
			<RelativeLayout android:layout_width="0dip"
				android:layout_height="match_parent" android:layout_weight=".333">
				<Button android:layout_width="50dip" android:layout_height="50dip"
					android:background="@drawable/icon_request" android:id="@+id/home_bottom_requests_btn"
					android:layout_centerInParent="true" />
			</RelativeLayout>
		</LinearLayout>

	</LinearLayout>

</LinearLayout>






