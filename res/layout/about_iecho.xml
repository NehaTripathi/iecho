<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="#c0000000" android:id="@+id/about_iecho_main_layout"
	android:layout_height="match_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_marginLeft="40dip" android:layout_marginTop="55dip"
		android:layout_marginRight="40dip" android:layout_marginBottom="30dip"
		android:orientation="vertical" android:layout_height="fill_parent"
		android:background="#ffffff">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="50dip" android:background="#0097db">
			<ImageView android:layout_width="140dip"
				android:layout_height="35dip" android:src="@drawable/logo"
				android:gravity="center_horizontal" android:layout_centerInParent="true" />
		</RelativeLayout>
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Information about iecho mobile will go here."
			android:textColor="#000000" />

	</LinearLayout>

</LinearLayout>
