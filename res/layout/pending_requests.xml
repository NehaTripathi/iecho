<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#f3f2f2" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:weightSum="1.0">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:weightSum="1.0" android:background="#0097db"
		android:orientation="horizontal">
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/pending_request_info"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_info" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".70"
			android:background="#0097db" android:orientation="vertical">
			<ImageView android:layout_width="140dip"
				android:layout_height="35dip" android:src="@drawable/logo"
				android:gravity="center_horizontal" android:layout_centerInParent="true" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/pending_requests_home_btn"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_home" />
		</RelativeLayout>

	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:background="#f3f2f2" android:orientation="horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dip" android:layout_centerInParent="true"
			android:textColor="#008bd0" android:textStyle="bold" android:text="My Pending Request"
			android:textSize="15dip" />
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".34"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:weightSum="1.0" android:background="#ffffff"
		android:orientation="vertical">

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight=".50"
			android:weightSum="1.0" android:orientation="horizontal">
			<Button android:layout_width="fill_parent"
				android:layout_height="36dip" android:layout_marginBottom="15dip"
				android:textStyle="bold" android:layout_marginLeft="25dip"
				android:id="@+id/pending_requests_follow_you_btn"
				android:layout_marginRight="25dip" android:text="Follow Me"
				android:background="#7bb044" android:textColor="#ffffff"
				android:layout_centerInParent="true" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight=".50"
			android:weightSum="1.0" android:orientation="horizontal">
			<Button android:layout_width="fill_parent"
				android:layout_height="36dip" android:layout_marginBottom="15dip"
				android:id="@+id/pending_requests_fine_me_btn" android:textStyle="bold"
				android:layout_marginLeft="25dip" android:layout_marginRight="25dip"
				android:text="Find You" android:background="#7bb044"
				android:textColor="#ffffff" android:layout_centerInParent="true" />
		</RelativeLayout>
		 <RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight=".333"
			android:weightSum="1.0" android:orientation="horizontal">
			<Button android:layout_width="fill_parent"
				android:layout_height="36dip" android:layout_marginBottom="15dip"
				android:textStyle="bold" android:layout_marginLeft="25dip"
				android:visibility="gone"
				android:layout_marginRight="25dip" android:text="Friend Me Request"
				android:id="@+id/pending_requests_friend_me_btn" android:background="#7bb044"
				android:textColor="#ffffff" android:layout_centerInParent="true" />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>

















