<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="#f3f2f2" android:weightSum="100"
	android:layout_height="fill_parent" android:id="@+id/layout_map">

	<com.google.android.maps.MapView
		android:layout_weight="40" android:id="@+id/mapview"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:apiKey="0YJ5s1L75K6WnaD7r2q9QFzog6wWroMnz8QgNpw"
		android:clickable="true" />

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="60">
		<ListView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/list_friendsmaps"
			android:cacheColorHint="#00000000">
		</ListView>
		<ProgressBar android:layout_width="wrap_content" android:id="@+id/list_progressbar"
			android:layout_height="wrap_content" android:layout_centerInParent="true" />
	</RelativeLayout>
</LinearLayout>
