<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="5dip">

	<ImageView android:layout_width="57dip"
		android:layout_height="57dip" android:id="@+id/imgViewLogo"
		android:layout_centerVertical="true" android:src="@drawable/icon"
		android:scaleType="fitXY">
	</ImageView>

	<LinearLayout android:layout_marginTop="6dip"
		android:layout_marginLeft="15dip" android:layout_toRightOf="@id/imgViewLogo"
		android:layout_height="57dip" android:layout_centerVertical="true"
		android:orientation="vertical"
		android:layout_marginRight="50dip" android:layout_width="fill_parent">

		<TextView android:layout_height="wrap_content" android:text="row 1"
			android:textColor="#000000" android:textSize="18dip"
			android:layout_width="fill_parent" android:id="@+id/txtViewTitle">
		</TextView>
		
		<TextView android:layout_height="wrap_content" android:text="row 1"
			android:textColor="#000000" android:textSize="12dip"
			android:layout_width="fill_parent" android:id="@+id/txtViewTitle_bottom">
		</TextView>

	</LinearLayout>

	<ImageView android:layout_width="23dip"
		android:layout_alignParentRight="true" android:layout_height="23dip"
		android:id="@+id/imgViewLogo_arrow" android:layout_centerVertical="true"
		android:src="@drawable/btn_arrow" android:scaleType="fitXY">
	</ImageView>

</RelativeLayout> 