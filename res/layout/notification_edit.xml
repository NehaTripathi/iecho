<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#f3f2f2" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:weightSum="1.0">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:weightSum="1.0" android:background="#0097db"
		android:orientation="horizontal">
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/edit_noti_info"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_info" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".70"
			android:background="#0097db" android:orientation="vertical">
			<ImageView android:layout_width="140dip"
				android:layout_height="35dip" android:src="@drawable/logo"
				android:gravity="center_horizontal" android:layout_centerInParent="true" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/edit_noti_home_btn"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_home" />
		</RelativeLayout>

	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:background="#f3f2f2" android:orientation="horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dip" android:layout_centerInParent="true"
			android:textColor="#008bd0" android:textStyle="bold" android:text="Edit Destination"
			android:textSize="15dip" />
	</RelativeLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".70"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:weightSum="1.0" android:background="#ffffff"
		android:orientation="vertical">

		<LinearLayout android:layout_width="fill_parent" android:focusableInTouchMode="true"
			android:layout_height="0dip" android:layout_weight=".20"
			android:weightSum="1.0" android:orientation="horizontal">
			<TextView android:layout_width="0dip" android:layout_height="match_parent"
				android:textSize="13dip" android:text="Destination Name:"
				android:layout_weight=".45" android:textColor="#000000"
				android:gravity="center_vertical" android:layout_marginLeft="10dip" />
			<EditText android:layout_width="0dip" android:layout_height="wrap_content"
				android:layout_weight=".55" android:layout_marginRight="10dip"
				android:gravity="center_vertical" android:maxLines="1"
				android:textSize="13dip" android:singleLine="true"
				android:id="@+id/edit_noti_name_edit" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent" android:focusableInTouchMode="true"
			android:layout_height="0dip" android:layout_weight=".20"
			android:weightSum="1.0" android:orientation="horizontal">
			<TextView android:layout_width="0dip" android:layout_height="match_parent"
				android:textSize="13dip" android:text="Starting Location:"
				android:layout_weight=".45" android:textColor="#000000"
				android:gravity="center_vertical" android:layout_marginLeft="10dip" />
			<EditText android:layout_width="0dip" android:layout_height="wrap_content"
				android:layout_weight=".55" android:layout_marginRight="10dip"
				android:gravity="center_vertical" android:maxLines="1"
				android:textSize="13dip" android:singleLine="true"
				android:id="@+id/edit_noti_start_location_edit" />
		</LinearLayout>


		<LinearLayout android:layout_width="fill_parent" android:focusableInTouchMode="true"
			android:layout_height="0dip" android:layout_weight=".20"
			android:weightSum="1.0" android:orientation="horizontal">
			<TextView android:layout_width="0dip" android:layout_height="match_parent"
				android:textSize="13dip" android:text="Destination Location:"
				android:layout_weight=".45" android:textColor="#000000"
				android:gravity="center_vertical" android:layout_marginLeft="10dip" />
			<EditText android:layout_width="0dip" android:layout_height="wrap_content"
				android:layout_weight=".55" android:layout_marginRight="10dip"
				android:gravity="center_vertical" android:maxLines="1"
				android:textSize="13dip" android:singleLine="true"
				android:id="@+id/edit_noti_location_edit" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent" android:focusableInTouchMode="true"
			android:layout_height="0dip" android:layout_weight=".20"
			android:weightSum="1.0" android:orientation="horizontal">
			<TextView android:layout_width="0dip" android:layout_height="match_parent"
				android:textSize="13dip" android:text="Average Time :               (in mins)"
				android:layout_weight=".45" android:textColor="#000000"
				android:gravity="center_vertical" android:layout_marginLeft="10dip" />
			<EditText android:layout_width="0dip" android:layout_height="wrap_content"
				android:layout_weight=".55" android:layout_marginRight="10dip"
				android:layout_marginTop="10dip" android:gravity="center_vertical"
				android:maxLines="1" android:textSize="13dip" android:singleLine="true"
				android:inputType="number" android:maxLength="12"
				android:id="@+id/edit_noti_time_edit" />
		</LinearLayout>

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="0dip" android:layout_weight=".18"
			android:weightSum="1.0" android:orientation="horizontal">
			<Button android:layout_width="fill_parent" android:visibility="visible"
				android:layout_height="match_parent" android:layout_marginBottom="15dip"
				android:textStyle="bold" android:text="Save Destination"
				android:background="#7bb044" android:layout_marginLeft="60dip"
				android:layout_marginRight="60dip" android:textColor="#ffffff"
				android:id="@+id/edit_noti_save_btn" android:layout_centerInParent="true" />
			<TextView android:layout_width="fill_parent"
				android:textSize="13dip" android:visibility="gone"
				android:layout_height="match_parent" android:layout_marginBottom="10dip"
				android:text="You can not create more then 5 notification. Delete some notification to create new."
				android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
				android:textColor="#000000" android:id="@+id/edit_noti_error_text"
				android:layout_centerInParent="true" />
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>
