<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="#dcdbdb" android:layout_height="match_parent"
	android:weightSum="1.0">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:weightSum="1.0" android:background="#0097db"
		android:orientation="horizontal">
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/notification_info"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_info" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".70"
			android:background="#0097db" android:orientation="vertical">
			<ImageView android:layout_width="140dip"
				android:layout_height="35dip" android:src="@drawable/logo"
				android:layout_centerInParent="true" />
		</RelativeLayout>

		<RelativeLayout android:layout_width="0dip"
			android:layout_height="match_parent" android:layout_weight=".15"
			android:background="#0097db" android:orientation="horizontal">
			<Button android:layout_width="wrap_content" android:id="@+id/notification_home_btn"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:background="@drawable/icon_home" />
		</RelativeLayout>

	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".10"
		android:background="#dcdbdb" android:orientation="horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dip" android:layout_centerInParent="true"
			android:textColor="#008bd0" android:textStyle="bold" android:text="Destination"
			android:textSize="15dip" />
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight=".58"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:weightSum="1.0" android:background="#ffffff"
		android:orientation="vertical">
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="42dip" android:layout_centerInParent="true"
				android:text="Create New Destination" android:textStyle="bold"
				android:id="@+id/notifications_create_notification_btn"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:background="#7bb044" android:textColor="#ffffff" />

		</RelativeLayout>
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="42dip" android:layout_centerInParent="true"
				android:text="Edit / Delete Destination" android:textStyle="bold"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:id="@+id/notificatios_manage_noti_btn" android:background="#7bb044"
				android:textColor="#ffffff" />

		</RelativeLayout>
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="42dip" android:layout_centerInParent="true"
				android:id="@+id/notifications_send_noti_btn"
				android:text="Send Destination" android:textStyle="bold"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:background="#7bb044" android:textColor="#ffffff" />

		</RelativeLayout>
		
		<RelativeLayout android:layout_width="match_parent"
			android:layout_height="0dip" android:layout_weight=".25">
			<Button android:layout_width="match_parent"
				android:layout_height="42dip" android:layout_centerInParent="true"
				android:id="@+id/notifications_cancel_btn"
				android:text="Cancel" android:textStyle="bold"
				android:layout_marginLeft="30dip" android:layout_marginRight="30dip"
				android:background="#7bb044" android:textColor="#ffffff" />

		</RelativeLayout>


	</LinearLayout>
</LinearLayout>
